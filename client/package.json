{
  "name": "dbas-client",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "test:unit:ci": "vitest --environment jsdom --root src/ --passWithNoTests --reporter dot --reporter junit --outputFile test-results/vitest.xml",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ci": "playwright test --output test-results/artifacts",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "prettier:ci": "npx prettier -c  ./",
    "prettier": " npx prettier -w  ./",
    "lint": "eslint ./src/**/* --fix",
    "lint:ci": "eslint ./src/**/*"
  },
  "dependencies": {
    "@aion-dk/js-client": "^3.1.0",
    "@assemblyvoting/ui-library": "^1.1.7",
    "@fortawesome/fontawesome-svg-core": "^6.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.3.0",
    "@fortawesome/vue-fontawesome": "^3.0.3",
    "@kalimahapps/vue-popper": "^1.1.6",
    "@pinia/testing": "^0.0.15",
    "@playwright/test": "^1.32.3",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/humanize-duration": "^3.27.1",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/cli-shared-utils": "^5.0.8",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.2.4",
    "@vue/tsconfig": "^0.1.3",
    "axios": "^1.3.4",
    "eslint-plugin-vue": "^9.9.0",
    "humanize-duration": "^3.28.0",
    "jsdom": "^20.0.3",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.41",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.0.33",
    "prettier": "^2.7.1",
    "sass": "^1.59.3",
    "sinon": "^15.0.2",
    "typescript": "~4.7.4",
    "vite": "^3.2.4",
    "vitest": "^0.25.3",
    "vue": "^3.2.45",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.0.9"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "eslint": "^8.39.0",
    "eslint-plugin-json": "^3.1.0"
  }
}
